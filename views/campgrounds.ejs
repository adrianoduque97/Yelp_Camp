<%- include("partials/header") %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to my YelpCamp</h1>
            <p>Customized CampGrounds</p>
            <p>
                <a class="btn-primary btn-lg" href="/campgrounds/new">Add new one</a>
            </p>
        </div>

    </header>
    <div class="col-lg-12">
        <h3>Our most popular Camps</h3>
    </div>
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach((camp)=>{ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%= camp.image %>">
                <div class="caption">
                    <h4><%= camp.name %> </h4> 
                </div>
            </div>
                      
        </div>
        <%}) %>
    </div>


</div>


<%- include("partials/footer") %>